random(min,max)
  return floor(math(0, 'random')*(max - min + 1) + min)

for i in (1..11)
	.hub_greeting-message	span:nth-child({i})
		text-transform: uppercase
		transition-delay: random(200, 1200)ms

hub
 display: block

.hub 
	display: flex
	align-items: center
	justify-content: center
	min-height: 100%
	width: 100%

	&_greeting-message
		text-align: center
		& span  
			font-size: 30px
			letter-spacing: .1em
			opacity: 0
			transition: opacity 1300ms
	
	&_body
		display: none
		opacity: 0
		transition: opacity 3000ms

	&_animation-container
		position: relative
		overflow: hidden
		padding: 0 !important

	&_img-container 
		text-align: center
		background-size: cover
		transform: scale(1,1)
		transition: all .5s
		img 
			width: 100%
	
	&_caption-animation 
		position: absolute
		display: flex
		flex-direction: column
		justify-content: center
		text-align: left
		padding-left: 5%
		left: 0
		height: 60%
		bottom: -@height - 1%
		width: 100%
		z-index: 100
		background-color: rgba(0,0,0,0.7)
		color: white
		transition: all 300ms ease-out

	&_animation-container:hover .hub_caption-animation
		transform: translateY(-100%)

	&_animation-container:hover	.hub_img-container 
		transform: scale(1.2,1.2)

@media (max-width: 1200px)  
	.hub_caption-animation 
		height: 50%;
		bottom: -@height;
	
@media (max-width: 992px)  
	.hub_caption-animation 
		height: 40%;
		bottom: -@height;

@media (max-width: 420px)  
	.hub_caption-animation 
		height: 100%;
		bottom: -@height;

	.hub_animation-container:hover .hub_img-container
		filter: blur(3px);
 


